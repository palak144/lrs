$colors: ( primary: #488aff, secondary: #32db64, danger: #f53d3d, light: #f4f4f4, dark: #222, cal-color: #ff8732);
@function bindColors($color-value) {
    @if ($color-value !=cal-color) {
        @return map-get($colors, $color-value)
    }
    @else {
        @if (type-of(map-get($colors, $color-value)) !=color) {
            @return #488aff
        }
        @else {
            @return map-get($colors, $color-value)
        }
    }
}

